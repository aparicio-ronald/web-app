<p id="notice"><%= notice %></p>

<h1>Sections</h1>
    <%= form_tag sections_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :section_number => nil %>
  </p
  
<% end %>

<% if @sections.blank? %>
  <h4>There are no section containing the number <%= params[:search] %>.</h4>
<% end %>

<table>
  <thead>
    <tr>
      
      <th>Course </th>
      <th>Section number</th>
      <th>Professor</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course.name %></td>
        <td><%= section.section_number %></td>
        <td><%= section.professor.name %></td>
       
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</table>

<br>

<%= link_to 'New Section', new_section_path %>
